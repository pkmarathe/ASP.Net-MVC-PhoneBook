
@{
    ViewBag.Title = "Add a new contact";
}
@model PhoneBookApp.Models.PersonModel
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Add a new contact</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Add", "Person", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.FirstName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-left col-sm-6 control-label" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.LastName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-left col-sm-6 control-label" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Phone, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-left col-sm-6 control-label" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "col-sm-6 control-label text-left" })
            </div>
            <button class="btn btn-success col-md-2" style="margin-right: 10px; margin-left:150px">Add</button>
    <a href="@Url.Action("Index")" class="btn btn-primary col-md-2" style="margin-right:450px">Cancel</a>
        }
    </div>
</div>

