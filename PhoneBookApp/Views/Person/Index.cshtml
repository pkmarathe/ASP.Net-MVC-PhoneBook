
@{
    ViewBag.Title = "Index";
}



@if (TempData["Update"] != null)
{
    <div class="alert alert-success" role="alert">
        <strong>Ok!</strong> Updated @TempData["Update"]
    </div>
}
@if (TempData["Remove"] != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Ok!</strong> Removed.
    </div>
}
<div class="row">
    <a href="@Url.Action("Index","Person",new { id = "1", filter = ""})">
        <h2>PhoneBookApp</h2>
    </a>
</div>
<div class="row">

</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Search</h3>
        </div>
        <div class="panel-body">

                @using (Html.BeginForm("Index", "Person", FormMethod.Get, new { @class = "form-inline" }))
                {
                    <div class="col-md-7">
                        @Html.TextBox("filter", "", new { @class = "form-control", @placeholder = "Enter the search name", @style = "max-width: 100%;" })
                    </div>
    <button class="btn btn-default col-md-2" style="margin-right: 10px;"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                     <button class="btn btn-default col-md-2">Clear Search</button>
                }

        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-lg-12">
                @Html.Action("Table")
            </div>
        </div>
    </div>
</div>

